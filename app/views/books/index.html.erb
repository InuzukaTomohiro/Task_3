<% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
<% end %>
<%= render 'user_info', book: @book, user: current_user %>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |books| %>
        <tr>
          <td>
          <%= link_to  book_path(books.id) do %>
            <%= image_tag books.user.get_profile_image(80, 80) %>
          <% end %>
          </td>
          <td><%= link_to books.title, book_path(books.id) %></td>
          <td><%= books.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
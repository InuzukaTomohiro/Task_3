<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpeg', size: "100x100" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>

          <tr>
            <th>introduction</th>
            <th><%= current_user%></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block", method: :get do%>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: "/books", method: :post do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title , class: "form-control", id: "book_title"%>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: "form-control", id: "book_opinion"%>
      </div>

      <%= f.submit 'Create Book', class: "btn btn-md btn-success" %>
      <% end %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td><%= image_tag "no_image.jpeg" %></td>
            <td><%= link_to books.title, book_path(books.id) %></td>
            <td>aaa<%= books.body %></td>
            <% end %>


          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'user_info', book: @books, user: current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td>
              <%= link_to  book_path(books.id) do %>
                <%= image_tag current_user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td><%= link_to books.title, book_path(books.id) %></td>
            <td><%= books.body %></td>
            <% end %>


          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
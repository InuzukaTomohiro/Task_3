<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpeg', size: "100x100" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%=  %></th>
          </tr>

          <tr>
            <th>introduction</th>
            <th><%= %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit_user_45147" href= edit_user_path(user.id) ><i class="fa-solid fa-user-gear"></i></a>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title , class: "form-control", id: "book_title"%>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :opinion, class: "form-control", id: "book_opinion"%>
      </div>

      <%= f.submit 'Create Book', class: "btn btn-md btn-success" %>
      <% end %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td><%= image_tag 'no_image.jpeg', size: "80x80" %></td>
            <td><%= books.title %></td>
            <td><%= books.body %></td>
          <% end %>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
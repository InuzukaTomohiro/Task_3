<%= render 'user_info', book: @books, user: current_user %>

<div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <%= form_with model: @book do |book| %>
          <tr>
            <td><%= image_tag @book.user.get_profile_image(100, 100) %></td>
            <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>
          <% end %>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
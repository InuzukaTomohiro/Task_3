<%= render 'user_info', book: @books, user: current_user %>

<div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <%=form_with @books do |book| %>
          <tr>
            <td><%= image_tag current_user.get_profile_image(100, 100) %></td>
            <td><%= link_to book.title, book_path(books.id) %></td>
            <td><%= book.body %></td>
            <% if %>
              <td><%= link_to "Edit", edit_book_path(books.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(books.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          <% end %>



          </tr>
        </tbody>
      </table>
    </div>